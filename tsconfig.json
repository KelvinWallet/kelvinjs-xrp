{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "strict": true,
    "target": "es5",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "sourceMap": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "src/**/*.spec.ts"]
}
